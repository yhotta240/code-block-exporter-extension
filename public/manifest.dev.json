{
  "manifest_version": 3,
  "name": "Code Block Exporter",
  "short_name": "Code Block Exporter",
  "version": "0.0.1",
  "description": "WEB ページ上のコードブロックを簡単にエクスポートします",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ]
}
